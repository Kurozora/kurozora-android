<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Default" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/charcoal_900</item>
        <item name="colorPrimaryVariant">@color/charcoal_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_600</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/charcoal_500</item>

        <!-- Window background color. -->
        <item name="android:windowBackground" tools:targetApi="l">@color/charcoal_500</item>

        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/charcoal_500</item>
        <!--        <item name="colorOnBackground"></item>-->
        <!--        <item name="colorSurface"></item>-->
        <!--        <item name="colorOnSurface"></item>-->
        <!--        <item name="colorError">@color/red_500</item>-->
        <!--        <item name="colorOnError"></item>-->
    </style>

    <!-- Day application theme. -->
    <style name="Theme.Day" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white_muted</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_600</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/white</item>

        <!-- Window background color. -->
        <item name="android:windowBackground" tools:targetApi="l">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
        <!--        <item name="colorOnBackground"></item>-->
        <!--        <item name="colorSurface"></item>-->
        <!--        <item name="colorOnSurface"></item>-->
        <!--        <item name="colorError">@color/red_500</item>-->
        <!--        <item name="colorOnError"></item>-->
    </style>
</resources>