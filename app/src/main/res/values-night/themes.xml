<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Default" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/charcoal_900</item>
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_600</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <!-- Window background color. -->
        <item name="android:windowBackground">?attr/colorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="colorOnBackground">?attr/colorSecondary</item>
<!--        <item name="colorSurface">?attr/colorPrimary</item>-->
        <item name="colorOnSurface">?attr/colorSecondary</item>
<!--        <item name="colorError">?attr/colorSecondary</item>-->
<!--        <item name="colorOnError">?attr/colorSecondary</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Night" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black_muted</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_600</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Window background color. -->
        <item name="android:windowBackground">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/black</item>
<!--        <item name="colorOnBackground"></item>-->
<!--        <item name="colorSurface"></item>-->
<!--        <item name="colorOnSurface"></item>-->
<!--        <item name="colorError">@color/red_500</item>-->
<!--        <item name="colorOnError"></item>-->
    </style>
</resources>